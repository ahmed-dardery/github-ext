{
  "manifest_version": 3,
  "name": "GitHub Ext.",
  "version": "0.0.2",
  "description": "Add copy button to branches names and link to based PRs on Github",
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "js/jquery-3.6.0.min.js",
        "js/preflight.js",
        "js/copy-base.js",
        "js/pr-base.js",
        "js/jira-ticket.js"
      ]
    }
  ],
  "host_permissions": [
    "*://github.com/*"
  ]
}